	public static String getAppContext(String type) {
		String contextName = "";
		Set contextNameSets = CapabilitiesHelper.driver.getContextHandles();
		Iterator iterator = contextNameSets.iterator();		
		while (iterator.hasNext()) {
			contextName = (String) iterator.next();
			if (contextName.contains(type)) {
				break;
			}
		}
		
		return contextName;
	}

	public static void checkLanguageSwitch() {
		try {
			// Click on "English" language
			if (CapabilitiesHelper.driver.findElementByXPath("//*[@id=\"language-switch\"]/button[1]").isDisplayed()) {
				CapabilitiesHelper.driver.findElementByXPath("//*[@id=\"language-switch\"]/button[1]").click();
			}
		} catch (Exception ex) {
			System.out.println("No Language Switch displayed");
		}
	}
}
